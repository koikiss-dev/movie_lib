    <SearchMovie client:load />
  </main>
  <footer class="text-center bg-neutral-950 text-neutral-50 w-full p-4">
    <small
      >&copy; Copyright {year}, <a
        href="https://github.com/koikiss-dev"
        target="_blank">Jorge Posadas</a
      > . UNAH</small
    >
  </footer>
</Layout>
